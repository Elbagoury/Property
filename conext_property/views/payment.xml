<odoo>
    <data>



        <record id="view_property_payment_form" model="ir.ui.view">
            <field name="name">Payment Form</field>
            <field name="model">payment.plan</field>
            <field name="arch" type="xml">
                <form>
                  <header>
                        
                        <field name="state" widget="statusbar" readonly="True"/>
                    </header>
                    <sheet>

                      <group>
                        
	                        <group>
		                        <field name="date_due"/>
		                        <field name="property_unit_id" />
		                        <field name="description" />
		                        <field name="use_nota_kredit" />
		                        <field name="amount_nota_kredit"/>
		                        <field name="amount_total"/>
		                        <field name="amount"/>
								<field name="amount_interest"/>
								<field name="amount_invoiced"/>
								<field name="amount_outstanding"/>
								<field name="amount_paid"/>
								<field name="invoice_id"/>
								<field name="nota_kredit_id"/>
								<field name="order_id"/>
	                        </group>
  
                      </group>

                    </sheet>
                </form>
            </field>
        </record>
        
        
        
        <record id="view_property_payment_tree" model="ir.ui.view">
            <field name="name">Booking Fee Tree</field>
            <field name="model">booking.fee</field>
            <field name="arch" type="xml">
                <tree string="Booking Fee" >
		                        <field name="date_due"/>
		                        <field name="property_unit_id" />
		                        <field name="description" />
		                        <field name="use_nota_kredit" />
		                        <field name="amount_nota_kredit"/>
		                        <field name="amount_total"/>
		                        <field name="amount"/>
								<field name="amount_interest"/>
								<field name="amount_invoiced"/>
								<field name="amount_outstanding"/>
								<field name="amount_paid"/>
								<field name="invoice_id"/>
								<field name="nota_kredit_id"/>
								<field name="order_id"/>
                </tree>
            </field>
         </record>

    </data>
</odoo>